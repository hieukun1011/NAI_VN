<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_view_tree" model="ir.ui.view">
        <field name="name">mail.template.tree</field>
        <field name="model">mail.template</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="template_id"/>
                <field name="model_id"/>
                <field name="create_time"/>
                <field name="price"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="mail_template_view_form" model="ir.ui.view">
        <field name="name">mail.template.form</field>
        <field name="model">mail.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1"/></h1>
                        <group>
                            <field name="model_id" required="1" options="{'no_create': True}"/>
                            <field name="model" invisible="1"/>
                        </group>
                    </div>
                    <group>
                        <group>
                            <field name="template_id" readonly="1"/>
                            <field name="create_time" readonly="1"/>
                            <field name="price" readonly="1"/>
                        </group>
                        <group>
                            <field name="template_quality" readonly="1"/>
                            <field name="status" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tham số" name="params">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="template_id" invisible="1"/>
                                    <field name="param_key"/>
                                    <field name="field_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" domain="[('model_id','=',parent.model_id)]"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="template_id" invisible="1"/>
                                        <field name="param_key"/>
                                        <field name="field_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                                    </group>
                                </form>
                            </field>
                            <field name="body_html" widget="html" options="{'style-inline': true}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="zns_template_act" model="ir.actions.act_window">
        <field name="name">Danh sách template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mail.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('template_id','!=',False)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mail_template_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mail_template_view_form')})
            ]"/>
    </record>
</odoo>