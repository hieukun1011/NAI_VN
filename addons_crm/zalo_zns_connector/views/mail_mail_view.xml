<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_mail_view_tree" model="ir.ui.view">
        <field name="name">mail.mail.tree</field>
        <field name="model">mail.mail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="template_id"/>
                <field name="subject" string="Messager ID"/>
                <field name="date" string="Date"/>
                <field name="email_from" string="From"/>
                <field name="zns_partner_id" string="To"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="mail_mail_view_form" model="ir.ui.view">
        <field name="name">mail.mail.form</field>
        <field name="model">mail.mail</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="outgoing,sent,received,exception,cancel"/>
                </header>
                <sheet>
                    Message ID
                    <h2><field name="subject"/></h2>
                    <group>
                        <group>
                            <field name="template_id"/>
                            <field name="date" string="Date"/>
                        </group>
                        <group>
                            <field name="email_from" string="From"/>
                            <field name="zns_partner_id" string="To"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="zns_mail_mail_act" model="ir.actions.act_window">
        <field name="name">Trạng thái tin nhắn</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mail.mail</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('template_id','!=',False)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('mail_mail_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('mail_mail_view_form')})
            ]"/>
    </record>
</odoo>