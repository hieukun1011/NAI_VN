<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="zns_wizard_form" model="ir.ui.view">
        <field name="name">zns.wizard.form</field>
        <field name="model">zns.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="template_id" options="{'no_open': True, 'no_create': True}" 
                        domain="[('model', '=', model), ('template_id', '!=', False)]"/>
                    <field name="model" invisible="1"/>
                </group>
                <footer>
                    <button class="oe_highlight" type="object" name="send_zns_wizard">Send</button>
                    <button class="oe_link" special="cancel">Cancel</button>
                </footer>
            </form>
        </field>
    </record>

    <record id="zns_wizard_action" model="ir.actions.act_window">
        <field name="name">Send ZNS Message</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">zns.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>