<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Đồng bộ template -->
        <record id="ir_cron_sync_zns_template" model="ir.cron">
            <field name="name">ZNS: Đồng bộ template</field>
            <field name="model_id" ref="model_mail_template"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="state">code</field>
            <field name="code">model.action_sync_template()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <!-- Cập nhật trạng thái -->
        <record id="ir_cron_sync_mail_mail" model="ir.cron">
            <field name="name">ZNS: Cập nhật trạng thái tin</field>
            <field name="model_id" ref="model_mail_mail"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="state">code</field>
            <field name="code">model.action_sync_status()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
