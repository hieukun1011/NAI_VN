<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_customer_tree_view" model="ir.ui.view">
        <field name="name">Loyalty customer tree view</field>
        <field name="model">loyalty.customer</field>
        <field name="arch" type="xml">
            <tree class="o_sale_order" sample="1">
                <field name="name"/>
                <field name="currency_id" invisible="1"/>
                <field name="rank_id" optional="show"/>
                <field name="phone" widget="phone_tree" optional="show"/>
                <field name="state" optional="show"/>
                <field name="score" optional="show"/>
                <field name="total_order" optional="show"/>
                <field name="total_spending" widget="monetary" options="{'currency_field': 'currency_id'}"
                       optional="show"/>
                <field name="create_date" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="loyalty_customer_form_view" model="ir.ui.view">
        <field name="name">Loyalty customer form view</field>
        <field name="model">loyalty.customer</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="active_card" type="object" string="Card activation" class="btn btn-primary"
                            invisible="state == 'activated'"/>
                    <button name="action_open_popup_reward" type="object" string="Give reward points"
                            class="btn btn-primary" invisible="state != 'activated'"/>
                    <button name="action_open_popup_discount" type="object" string="Give coupons"
                            class="btn btn-primary" invisible="state != 'activated'"/>
                    <button name="action_open_popup_up_rank" type="object" string="Up rank" class="btn btn-primary"
                            invisible="state != 'activated'"/>
                    <button name="exclude_card" type="object" string="Exclude" invisible="state == 'exclude'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="unactivated,activated,exclude"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_log_change_rank" type="object" string="Membership rank history"
                                icon="fa-exchange" class="oe_stat_button"/>
                        <button name="action_open_log_change_score" type="object" string="Point accumulation history"
                                icon="fa-history" class="oe_stat_button"/>
                    </div>
                    <div class="o_employee_avatar">
                        <field name="image_1920" widget="image" class="oe_avatar m-0"
                               options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;avatar_128&quot;}"/>
                        <field name="qr_code" widget="image" class="oe_avatar m-0"
                               options="{&quot;zoom&quot;: true}"/>
                    </div>
                    <div class="oe_title" style="width:70%">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name" required="True"
                                   modifiers="{'required':true}"/>
                        </h1>
                    </div>
                    <div>
                        <label for="code"/>
                        <field name="code" placeholder="Code customer"/>
                    </div>
                    <group>
                        <group name="accumulated_point_information" string="Accumulated point information">
                            <field name="sale_order_ids" widget="many2many_tags"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="rank_id" required="1"/>
                            <field name="next_rank_id"/>
                            <field name="currency_id" invisible="1"/>
                            <label for="score"/>
                            <div>
                                <field name="score" class="oe_inline" readonly="1"/>
                                <span class="ml8">Score</span>
                            </div>
                            <field name="expiration_date_score"/>
                        </group>
                        <group name="information_member" string="Member information ">
                            <field name="phone" widget="phone" invisible="display_phone != False"/>
                            <field name="display_phone" widget="phone" invisible="phone == False"/>
                            <field name="activation_date" readonly="1"/>
                            <field name="last_rating_date"/>
                        </group>
                        <group invisible="state == 'activated'"></group>
                        <group name="upgrade_information" string="Upgrade information" invisible="state != 'activated'">
                            <main style="display: -webkit-box;">
                                <div class="box-rank">
                                    <p class="box-rank__title">ƒê·ªÉ n√¢ng l√™n th·ª© h·∫°ng ti·∫øp theo:
                                        <field name="next_rank_id" class="oe_inline"/>
                                    </p>
                                    <div class="box-rank__group">
                                        <div class="box-rank__group-left">
                                            <p class="box-rank__group-left__name">ƒê∆°n h√†ng</p>
                                            <div class="box-rank__group-left__rank">
                                                <div class="box-rank__group-left__brick">
                                                    <div class="brick__relative">
                                                        <div class="brick__content">
                                                            <field name="order_next_rank" class="oe_inline"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="box-rank__group-left__end">üíµ</div>
                                            </div>
                                        </div>
                                        <div class="box-rank__group-brick"></div>
                                        <div class="box-rank__group-left">
                                            <p class="box-rank__group-left__name">Chi ti√™u</p>

                                            <div class="box-rank__group-left__rank">
                                                <div class="box-rank__group-left__brick">
                                                    <div class="brick__relative">
                                                        <field name="money_next_rank"
                                                               class="brick__content oe_inline text-center"/>
                                                    </div>
                                                </div>
                                                <div class="box-rank__group-left__end">üíµ</div>
                                            </div>
                                        </div>
                                    </div>
                                    <p class="box-rank__noti">
                                        Th·ª© h·∫°ng s·∫Ω ƒë∆∞·ª£c c·∫≠p nh·∫≠t l·∫°i sau ng√†y dd/mm/yy
                                    </p>
                                </div>
                            </main>

                        </group>
                        <group>
                            <separator string="Spending information"/>
                            <field name="total_spending" widget="monetary" options="{'currency_field': 'currency_id'}"
                                   readonly="0"/>
                            <label for="average_spending"/>
                            <div>
                                <field name="average_spending" class="oe_inline" readonly="1" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <span class="ml8">/Order</span>
                            </div>
                            <separator string="Information card" invisible="state != 'activated'"/>
                            <label for="code" invisible="state != 'activated'"/>
                            <div class="o_row" invisible="state != 'activated'">
                                <field name="barcode"/>
                                <button string="Generate" class="btn btn-link" type="object"
                                        name="generate_random_barcode" invisible="code != False"/>
                            </div>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_loyalty_customer_view">
        <field name="name">Loyalty customer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loyalty.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
        <field name="domain"></field>
    </record>
</odoo>
