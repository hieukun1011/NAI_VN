<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_rank_tree_view" model="ir.ui.view">
        <field name="name">Loyalty rank tree view</field>
        <field name="model">loyalty.rank</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sequence"/>
                <field name="currency_id" invisible="1"/>
                <field name="accumulated_money" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="ewallet_money" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="loyalty_program_ids" widget="many2many_tags"/>
                <field name="count_member"/>
            </tree>
        </field>
    </record>

    <record id="loyalty_rank_form_view" model="ir.ui.view">
        <field name="name">Loyalty rank form view</field>
        <field name="model">loyalty.rank</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_loyalty_customer" type="object" string="Loyalty card"
                            icon="fa-credit-card" class="oe_stat_button"/>
                    </div>
                    <div class="oe_title" style="width:70%">
                        <label for="name" string="Membership class name"/>
                        <h1>
                            <field name="name" placeholder="Membership class name" required="True"
                                   modifiers="{'required':true}"/>
                        </h1>
                    </div>
                    <group>
                        <field name="currency_id"/>
                        <field name="text_color" widget="color_picker"/>
                        <field name="background_color" widget="color_picker"/>
                        <field name="sequence"/>
                    </group>
                    <notebook>
                        <page name="conditions_and_policies" string="Conditions and policies">
                            <group>
                                <group name="up_rank" string="Upgrade conditions">
                                    <label for="proviso"/>
                                    <div>
                                        <field name="proviso" class="o_light_label" widget="radio" options="{'horizontal': true}" required="True"/>
                                    </div>
                                    <label for="accumulated_money"/>
                                    <div>
                                        <field name="accumulated_money" widget="monetary" options="{'currency_field': 'currency_id'}" class="text-center oe_inline"/>
                                        <span class="ml6">trong</span>
                                        <field name="total_money_in_month" class="text-center oe_inline"/>
                                        <span class="ml2">Th치ng</span>
                                    </div>
                                    <label for="total_order_uprank"/>
                                    <div>
                                        <field name="total_order_uprank" class="oe_inline text-center"/>
                                        <span class="ml6">trong</span>
                                        <field name="total_order_in_month" class="text-center oe_inline"/>
                                        <span class="ml2">Th치ng</span>
                                    </div>
                                </group>
                                <group name="loyalty_program" string="Program">
                                    <field name="loyalty_program_ids" widget="many2many_tags"/>
                                </group>
                                <group name="conditions_maintained" string="Conditions maintained">
                                    <label for="proviso_maintain"/>
                                    <div>
                                        <field name="proviso_maintain" class="o_light_label" widget="radio" options="{'horizontal': true}" required="True"/>
                                    </div>
                                    <label for="total_money"/>
                                    <div>
                                        <field name="total_money" widget="monetary" options="{'currency_field': 'currency_id'}" class="text-center oe_inline"/>
                                        <span class="ml6">trong</span>
                                        <field name="money_month_maintain" class="text-center oe_inline"/>
                                        <span class="ml2">Th치ng</span>
                                    </div>
                                    <label for="total_order"/>
                                    <div>
                                        <field name="total_order" class="oe_inline text-center"/>
                                        <span class="ml6">trong</span>
                                        <field name="order_month_maintain" class="text-center oe_inline"/>
                                        <span class="ml2">Th치ng</span>
                                    </div>
                                </group>
                                <group name="terms_and_services" string="Terms and services">
                                    <field name="attachment_ids" widget="many2many_binary" string="Attach a file"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_loyalty_rank_view">
        <field name="name">Loyalty rank</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loyalty.rank</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
        <field name="domain"></field>
    </record>
</odoo>
