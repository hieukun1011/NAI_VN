<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.pontusinc.core</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="companies" position="before">
                <h2>Config type customer</h2>
                <div class="row mt16 o_settings_container" name="pontusinc_config_core">
                    <div class="row mt16">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_bank"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_bank"/>
                                <div class="text-muted">
                                    Configure the customer type as bank
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
