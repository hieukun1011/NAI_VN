<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ic_erp_view_calendar_event_form_inherit" model="ir.ui.view">
            <field name="name">ic.erp.calendar.event.form</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='set_discuss_videocall_location']" position="replace">
                    <button name="set_discuss_videocall_location" type="object" class="btn btn-link"
                        attrs="{'invisible':  [('videocall_location', '!=', False)]}" context="{'recurrence_update': recurrence_update}">
                        <span class="fa fa-plus"></span><span> Add meeting</span>
                    </button>
                </xpath>
                <xpath expr="//h1" position="after">
                    <h4>
                        <label for="is_event_company"/>
                        <field name="is_event_company"/>
                    </h4>
                </xpath>
                <xpath expr="//field[@name='partner_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_event_company', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_ids']" position="after">
                    <field name="employee_ids" widget="many2manyattendee"
                            placeholder="Select attendees..."
                            class="oe_inline o_calendar_attendees"
                            attrs="{'invisible': [('is_event_company', '=', False)]}"
                        />
                </xpath>
                <xpath expr="//field[@name='location']" position="after">
                    <field name="room_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>