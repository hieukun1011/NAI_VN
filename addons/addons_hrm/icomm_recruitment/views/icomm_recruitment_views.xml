<?xml version="1.0"?>
<odoo>
    <data>
        <record id="quick_create_applicant_form_icomm" model="ir.ui.view">
            <field name="name">icomm.applicant.form.quick_create</field>
            <field name="model">hr.applicant</field>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="partner_name" required="1"/>
                            <field name="email_from" string="Email"/>
                            <field name="partner_phone"/>
                            <field name="interviewer_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="job_id" required="1"/>
                            <field name="department_id"/>
                            <field name="salary_expected"/>
                        </group>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="crm_case_tree_view_job_icomm_inherit" model="ir.ui.view">
            <field name="name">icomm.hr.applicant.tree.inherit</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.crm_case_tree_view_job"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='create_date']" position="after">
                    <field name="apply_date" optional="show"/>
                    <field name="meeting_display_date" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="icomm_form_view_applicant_inherit" model="ir.ui.view">
            <field name="name">icomm.applicants.form.inherit</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type_id']" position="after">
                    <field name="apply_date" optional="show"/>
                </xpath>
                <notebook position="inside">
                    <page name="history_interview" string="History interview">
                        <field name="history_ids" context="{'default_applicant_id':id}" mode="tree">
                            <tree editable="top" delete="false" create="false">
                                <field name="applicant_id" invisible="1"/>
                                <field name="meeting_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="result"/>
                                <field name="description"/>
                                <field name="attachment_id" widget="many2many_binary"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="icomm_kanban_view_applicant_inherit" model="ir.ui.view">
            <field name="name">icomm.applicants.kanban.inherit</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_kanban_view_applicant"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="quick_create_view">icomm_recruitment.quick_create_applicant_form_icomm</attribute>
                    <attribute name="on_create">quick_create</attribute>
                </xpath>
            </field>
        </record>

        <!--Hr Employee inherit search view-->
        <record id="hr_employee_view_search_inherit" model="ir.ui.view">
            <field name="name">hr.employee.search.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="filter_domain">['|', '|', ('work_email', 'ilike', self), ('name', 'ilike', self), ('mobile_phone', 'ilike', self)]</attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.server" id="action_archive_applicant">
			<field name="name">Refuse</field>
			<field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
			<field name="binding_model_id" ref="hr_recruitment.model_hr_applicant" />
			<field name="state">code</field>
			<field name="code">
				if records:
					records.action_archive_applicant()
			</field>
		</record>

        <record model="ir.actions.act_window.view" id="hr_recruitment.action_hr_sec_kanban_view_act_job">
            <field name="view_id" ref="icomm_kanban_view_applicant_inherit"/>
        </record>
    </data>
</odoo>
