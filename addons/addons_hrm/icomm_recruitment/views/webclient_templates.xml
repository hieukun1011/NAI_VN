<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="web.brand_promotion_message" name="Brand Promotion Message">
        <t t-set="odoo_logo">
            <a target="_blank"
               t-attf-href="https://icomm.vn/"
               class="badge text-bg-light">
                <img alt="IC-ERP"
                     src="/icomm_recruitment/static/img/pontusinc_logo.png"
                     width="62" height="20"
                     style="width: auto; height: 1em; vertical-align: baseline;"/>
            </a>
        </t>
        <t t-set="final_message">Cung cấp bởi Pontusinc ERP - Phần mềm quản trị doanh nghiệp</t>
        <!--        <t t-out="final_message % (odoo_logo, _message and ('- ' + _message) or '')"/>-->
    </template>

    <template id="web.layout" name="Web layout">&lt;!DOCTYPE html&gt;
        <html t-att="html_data or {}">
            <head>
                <meta charset="utf-8"/>
                <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                <title t-esc="title or 'Pontusinc ERP'"/>
                <link type="image/x-icon" rel="shortcut icon"
                      t-att-href="x_icon or '/icomm_recruitment/static/img/pontusinc_logo.ico'"/>
                <script id="web.layout.odooscript" type="text/javascript">
                    var odoo = {
                    csrf_token: "<t t-nocache="The csrf token must always be up to date."
                                    t-out="request.csrf_token(None)"/>",
                    debug: "<t t-esc="debug"/>",
                    };
                </script>
                <t t-out="head or ''"/>
            </head>
            <body t-att-class="body_classname">
                <t t-out="0"/>
            </body>
        </html>
    </template>

    <template id="web.webclient_bootstrap">
        <t t-call="web.layout">
            <t t-set="head_web">
                <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>
                <!-- Chrome, Firefox OS and Opera -->
                <meta name="theme-color" content="#875A7B"/>
                <link rel="icon" sizes="192x192" href="/icomm_recruitment/static/img/pontusinc_logo.png"/>

                <!-- iOS Safari -->
                <meta name="apple-mobile-web-app-capable" content="yes"/>
                <meta name="apple-mobile-web-app-status-bar-style" content="black"/>
                <link rel="apple-touch-icon" href="/icomm_recruitment/static/img/pontusinc_logo.png"/>

                <!-- Windows Phone -->
                <meta name="msapplication-navbutton-color" content="#875A7B"/>
                <meta name="msapplication-TileColor" content="#875A7B"/>
                <meta name="msapplication-TileImage" content="/icomm_recruitment/static/img/pontusinc_logo.png"/>

                <script type="text/javascript">
                    odoo.__session_info__ =<t t-out="json.dumps(session_info)"/>;
                    odoo.reloadMenus = () =>
                    fetch(`/web/webclient/load_menus/${odoo.__session_info__.cache_hashes.load_menus}`).then(res =>
                    res.json());
                    odoo.loadMenusPromise = odoo.reloadMenus();
                    // Block to avoid leaking variables in the script scope
                    {
                    const { user_context, cache_hashes } = odoo.__session_info__;
                    // Prefetch translations to speedup webclient. This is done in JS because link rel="prefetch"
                    // is not yet supported on safari.
                    fetch(`/web/webclient/translations/${cache_hashes.translations}?lang=${user_context.lang}`);
                    }
                </script>
                <t t-if="request.httprequest.cookies.get('color_scheme') == 'dark'">
                    <t t-call-assets="web.dark_mode_assets_common" t-js="false"/>
                    <t t-call-assets="web.dark_mode_assets_backend" t-js="false"/>
                </t>
                <t t-else="">
                    <t t-call-assets="web.assets_common" t-js="false"/>
                    <t t-call-assets="web.assets_backend" t-js="false"/>
                </t>
                <t t-call-assets="web.assets_common" t-css="false"/>
                <t t-call-assets="web.assets_backend" t-css="false"/>
                <t t-call-assets="web.assets_backend_prod_only" t-css="false"/>
                <t t-call="web.conditional_assets_tests"/>
            </t>
            <t t-set="head" t-value="head_web + (head or '')"/>
            <t t-set="body_classname" t-value="'o_web_client'"/>
        </t>
    </template>

</odoo>
