<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_employee_form_inherit_icomm" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.icomm</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name ="priority" eval="20" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="have_face" invisible="1"/>
                    <button name="insert_user_camera_checkin" string="Insert face" type="object" class="btn-primary"/>
                    <button name="create_employee_camera_checkin" string="sync user camera AI" type="object" class="btn-primary" attrs="{'invisible': [('have_face', '!=', False)]}"/>
                </xpath>
                <xpath expr="//page[@name='hr_settings']//group[@name='identification_group']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='mobile_phone']" position="before">
                    <field name="barcode" attrs="{'readonly': [('id', '!=', False)]}" string="Employee Code"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>