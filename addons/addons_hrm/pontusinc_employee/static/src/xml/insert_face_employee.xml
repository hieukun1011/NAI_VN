<?xml version="1.0" encoding="UTF-8" ?>
<templates id="insert_face_employee_template" xml:space="preserve">
    <t t-name="InsertFaceEmployee">
         <div class="oh_dashboards">
            <div class="container-fluid my-5 o_hr_dashboard"/>
        </div>
    </t>
    <t t-name="InsertBody">
        <section class="dashboard_main_section" id="main_section_manager">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="upload-form">
                            <h2 class="text-center mb-4">Upload Image</h2>
                            <form id="imageForm" enctype="multipart/form-data">
                                <div class="form-group">
                                    <div id="uploadPreview" class="upload-preview">
                                        <img id="imagePreview" src="https://via.placeholder.com/150"
                                             alt="Image Preview"/>
                                        <span>Click to Upload</span>
                                    </div>
                                    <input type="file" id="fileInput" class="form-control-file" accept="image/*"
                                           name="image"
                                           style="display: none;"/>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn upload-image-face">Upload</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="image-list">
                            <h2 class="text-center mb-4">Chọn ảnh nhận diện</h2>
                            <div id="imageContainer" class="row"></div>
                            <button id="rpcButton" class="btn rpc-btn mt-2">Perform RPC</button>
                        </div>
                    </div>
                </div>
