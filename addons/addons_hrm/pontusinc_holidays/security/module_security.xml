<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="hr_leave_rule_parent_employee" model="ir.rule">
            <field name="name">Hr leave read record</field>
            <field name="model_id" ref="model_hr_leave"/>
            <field name="domain_force">['|',
                ('employee_id.user_id', '=', user.id),
                '&amp;',
                ('state', '!=', 'draft'),
                '|',
                '|',
                '|',
                '|',
                ('employee_id.leave_manager_id', '=', user.id),
                ('employee_id.parent_id.user_id', '=', user.id),
                ('employee_id.coach_id.user_id', '=', user.id),
                ('employee_public_id.user_id', '=', user.id),
                ('message_partner_ids', '=', user.partner_id.id),
                ]
            </field>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="timesheet_penalty_calculation_rule_user" model="ir.rule">
            <field name="name">Timesheet penalty calculation rule user</field>
            <field name="model_id" ref="model_timesheet_penalty_calculation"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="timesheet_penalty_calculation_rule_admin" model="ir.rule">
            <field name="name">Timesheet penalty calculation rule admin</field>
            <field name="model_id" ref="model_timesheet_penalty_calculation"/>
            <field name="domain_force">[(1, '=', 1)]
            </field>
            <field name="groups" eval="[(4, ref('hr_attendance.group_hr_attendance_user'))]"/>
        </record>
    </data>
</odoo>