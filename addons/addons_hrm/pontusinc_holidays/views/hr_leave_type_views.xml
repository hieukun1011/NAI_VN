<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pontusinc_edit_holiday_status_form_inherit" model="ir.ui.view">
            <field name="name">pontusinc.edit.holiday.status.form.inherit</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allocation_validation_type']" position="after">
                    <group name="negative_requests" id="negative_requests" string="Negative Group" attrs="{'invisible': [('requires_allocation', '=', 'no')]}">
                        <field name="allows_negative"/>
                        <field name="max_allowed_negative"
                               widget="char"
                               class="o_hr_narrow_field"
                               attrs="{'invisible': [('allows_negative', '=', False)]}"/>
                        <field name="time_application" attrs="{'invisible': [('allows_negative', '=', False)]}"/>
                    </group>
                    <group>
                        <field name="is_draft"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
