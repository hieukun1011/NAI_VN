<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_timesheet_penalty_calculation" model="ir.cron">
        <field name="name">Report timesheet penalty calculation</field>
        <field name="model_id" ref="model_timesheet_penalty_calculation"/>
        <field name="state">code</field>
        <field name="code">model.cron_report_timesheet_penalty_calculation()</field>
        <field name='interval_number'>1</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(day=1, months=1)).strftime('%Y-%m-%d 00:00:00')" />
    </record>
</odoo>