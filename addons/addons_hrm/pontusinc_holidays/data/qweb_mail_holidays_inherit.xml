<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mail_notification_layout_with_responsible_signature"
                  name="Mail: mail notification layout with responsible signature (user_id of the record)"
                  inherit_id="mail.mail_notification_layout">
            <xpath expr="//table//tbody//tr[3]//table" position="attributes">
                <attribute name="style">width: 100%;</attribute>
            </xpath>
            <xpath expr="//table//tbody//tr[3]//table//tbody/tr" position="inside">
                <td>
                    <a t-att-href="'%s/approve_request/%s/approved' % (record.get_base_url(), record.id)"
                       style="font-size: 12px; background: green ;color: #FFFFFF; display: block; padding: 8px 12px 11px; text-decoration: none !important; font-weight: 400;">
                        <span>Phê Duyệt</span>
                    </a>
                    <a t-att-href="'%s/approve_request/%s/reject' % (record.get_base_url(), record.id)"
                       style="font-size: 12px; background: rebeccapurple ; color: #FFFFFF; display: block; padding: 8px 12px 11px; text-decoration: none !important; font-weight: 400;">
                        <span>Từ chối</span>
                    </a>
                </td>
            </xpath>
        </template>
    </data>
</odoo>