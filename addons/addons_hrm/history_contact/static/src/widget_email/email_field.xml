<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="history_contact.EmailFieldTree" owl="1">
        <t t-if="props.readonly">
            <div class="d-grid">
                <a t-esc="props.value_data || ''"/>
            </div>
        </t>
    </t>

    <t t-name="web.FormEmailField" t-inherit="web.EmailField" t-inherit-mode="primary">
        <xpath expr="//input" position="after">
            <a
                t-if="props.value"
                t-att-href="'mailto:'+props.value"
                class="ms-3 d-inline-flex align-items-center"
                href="#"
            >
                <i class="fa fa-envelope" data-tooltip="Send Email" aria-label="Send Email"></i>
            </a>
            <a
                t-if="props.value"
                t-att-title="title"
                href="#"
                t-on-click.prevent.stop="SearchprofilingHref"
                class="ms-3 d-inline-flex align-items-center"
            ><i class="fa fa-search"></i><small class="fw-bold ms-1">Search</small></a>
        </xpath>
    </t>

</templates>

