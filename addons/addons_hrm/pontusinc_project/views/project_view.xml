<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pontusinc_view_edit_project_inherit_form" model="ir.ui.view">
        <field name="name">project.project.view.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_tasks_managment']" position="inside">
                <field name="type_ids" widget="many2many_tags" domain="[('user_id', '=', False)]"/>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="favorite_user_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="project_owner_ids" widget="many2many_tags"/>
                <field name="department_ids" widget="many2many_tags"/>
                <field name="manager_follower_ids" widget="many2many_tags" groups="base.group_system,base.group_no_one"/>
            </xpath>
        </field>
    </record>

    <record id="pontusinc_project_view_kanban_inherit" model="ir.ui.view">
        <field name="name">project.kanban.inherit.project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_manage_view')]" position="inside">
                <div role="menuitem" groups="pontusinc_project.group_project_manager">
                    <a name="action_get_list_view_backlog" type="object" t-attf-context="{'active_id': #{record.id.raw_value} }">Update backlog</a>
                </div>
            </xpath>
        </field>
    </record>
</odoo>