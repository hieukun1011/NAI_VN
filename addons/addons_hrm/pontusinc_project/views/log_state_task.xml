<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="history_change_state_task_view_tree" model="ir.ui.view">
            <field name="model">History change state task view tree</field>
            <field name="model">project.task.log</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="History change state task" editable="top" create="0" delete="0">
                    <field name="task_id"/>
                    <field name="stage_id"/>
                    <field name="create_date" string="Date change" readonly="0"/>
                    <field name="create_uid" widget="many2one_avatar_user" string="User change"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>