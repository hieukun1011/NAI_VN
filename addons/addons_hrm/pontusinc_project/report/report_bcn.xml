<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_months_tree_view" model="ir.ui.view">
            <field name="model">Report months tree view</field>
            <field name="model">export.bct</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="month"/>
                </tree>
            </field>
        </record>

        <record id="report_months_form_view" model="ir.ui.view">
            <field name="model">Report months form view</field>
            <field name="model">export.bct</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <label for="month"/>
                                <div class="o_address_format">
                                    <div class="o_row">
                                        <field name="month"/>
                                        <field name="year"/>
                                        <button class="btn btn-primary" name="action_report_months" string="Report months" type="object"/>
                                    </div>
                                </div>
                            </group>
                            <group>
                            </group>
                            <field name="detail_ids" readonly="1">
                                <tree>
                                    <field name="user_id"/>
                                    <field name="point"/>
                                    <button class="btn btn-apply" name="show_detail" string="Show detail" type="object"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="report_months_action">
            <field name="name">Report months</field>
            <field name="res_model">export.bct</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>