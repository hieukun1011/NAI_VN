<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shipping_res_partner_view_form" model="ir.ui.view">
        <field name="name">Shipping res partner view form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_shipping']" position="before">
                <button name="action_open_shipping_waybill" type="object" class="oe_stat_button" icon="fa-dropbox">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Shipping waybill</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
