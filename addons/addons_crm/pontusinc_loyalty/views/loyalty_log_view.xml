<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_log_change_score_tree_view" model="ir.ui.view">
        <field name="name">Loyalty log change score tree view</field>
        <field name="model">loyalty.log.change.score</field>
        <field name="arch" type="xml">
            <tree string="Point accumulation change history" editable="top">
                <field name="create_date" string="Date"/>
                <field name="currency_id" invisible="1"/>
                <field name="accumulate_points" widget="monetary" options="{'currency_field': 'currency_id'}"
                       sum="total"/>
                <field name="minus_points" widget="monetary" options="{'currency_field': 'currency_id'}" sum="total"/>
                <field name="expires_points" widget="monetary" options="{'currency_field': 'currency_id'}" sum="total"/>
                <field name="expires_date"/>
                <field name="order_id" widget="many2one"/>
                <field name="note"/>
                <field name="program_id"/>
                <field name="payment_method_line_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="loyalty_log_change_rank_tree_view" model="ir.ui.view">
        <field name="name">Loyalty log change rank tree view</field>
        <field name="model">loyalty.log.change.rank</field>
        <field name="arch" type="xml">
            <tree string="Membership class change history" editable="top">
                <field name="member_id" invisible="1"/>
                <field name="rank_id"/>
                <field name="state_rank" widget="badge" decoration-success="state_rank=='up_rank'"
                       decoration-warning="state_rank=='keep_rank'" decoration-danger="state_rank=='down_rank'"/>
                <field name="start_date"/>
                <field name="stop_date"/>
                <field name="reason_id"/>
                <field name="program_ids" widget="many2many_tags"/>
                <field name="note"/>
            </tree>
        </field>
    </record>
</odoo>
