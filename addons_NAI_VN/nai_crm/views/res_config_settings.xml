<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">NAI.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="companies" position="before">
                <h2>Exchange rate configuration</h2>
                <div class="row mt16 o_settings_container" name="nai_config_setting">
                    <div class="row mt16">
                        <div class="row mt2 o_light_label">
                            <label for="exchange_rate" string="Foreign exchange rate" class="col-lg-3"/>
                            <field name="exchange_rate" class="col-lg-2"/>
                            <label string="VND/USD" for="exchange_rate" class="col-lg-2"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
