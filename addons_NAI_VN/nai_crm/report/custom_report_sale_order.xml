<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="custom_quotation_report">
        <t t-call="web.external_layout">
        <style>
            * {
                padding: 0;
                margin: 0;
                box-sizing: border-box;
            }
            .container-fluid {
                padding: 20px;
            }
            .section-title {
                color: red;
                font-size: 18px;
                font-weight: bold;
            }
            .floor-img-background, .floor-img {
                width: 100%;
                height: auto;
                object-fit: cover;
                display: block;
            }
            .floor-img {
                border: 2px solid red;
            }
            .contact-info {
                background-color: red;
                color: white;
                padding: 15px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }
            .contact-box h3 {
                margin-bottom: 10px;
            }
            @media print {
                .contact-info {
                    padding: 10px;
                }
                .floor-img-background, .floor-img {
                    height: 250px !important;
                }
                .section-title {
                    color: red !important;
                    font-size: 18px !important;
                    font-weight: bold !important;
                }
            }
        </style>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 text-center">
                    <t t-if="o.order_line.product_id.building_parent_id.image_1024">
                        <t t-set="background_image_1024" t-value="o.order_line.product_id.building_parent_id.image_1024.decode('utf-8')"/>
                        <img t-att-src="'data:image/png;base64,%s' % background_image_1024" class="floor-img-background"/>
                    </t>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-7">
                    <div class="property-section">
                        <h2 class="section-title" style="color: red; font-size: 18px; font-weight: bold;">Property Features:</h2>
                        <p><strong>Location:</strong> <t t-esc="o.order_line.product_id.location or '...'"/></p>
                        <p><strong>Type:</strong> Office Building</p>
                        <p><strong>Area:</strong> <t t-esc="o.order_line.product_id.area or '...'"/></p>
                        <p><strong>Occupancy Rate:</strong> 100%</p>
                        <p><strong>Average Rent:</strong> US$ 100/sqm/month</p>
                        <p><strong>Annual Income:</strong> US$ 100/month</p>
                        <p><strong>Green Certificate:</strong> ...</p>
                    </div>
                    <div class="additional-info mt-3">
                        <h2 class="section-title" style="color: red; font-size: 18px; font-weight: bold;">Additional Information:</h2>
                        <p><t t-esc="o.note or 'No additional information available.'"/></p>
                    </div>
                </div>
                <div class="col-5">
                    <t t-if="o.order_line.product_id.image_1024">
                        <t t-set="background_image_product_1024" t-value="o.order_line.product_id.image_1024.decode('utf-8')"/>
                        <img t-att-src="'data:image/png;base64,%s' % background_image_product_1024" class="floor-img"/>
                    </t>
                    <p><strong>Area:</strong> <t t-esc="o.order_line.product_id.area or '...'"/></p>
                    <p><strong>Occupancy Rate:</strong> 100%</p>
                    <p><strong>Average Rent:</strong> US$ 100/sqm/month</p>
                </div>
            </div>
            <div class="row contact-info mt-4">
                <div class="col-8">
                    <div class="contact-box">
                        <h3>Contact:</h3>
                        <p><strong>Hotline:</strong> <t t-esc="o.company_id.phone or '...'"/></p>
                        <p><strong>Website:</strong> <t t-esc="o.company_id.website or '...'"/></p>
                    </div>
                </div>
                <div class="col-4 text-right">
                    <p><strong>Office:</strong> Ho Chi Minh City, Vietnam</p>
                </div>
            </div>
        </div>
    </t>
    </template>


    <template id="custom_so_retail_report">
        <t t-call="web.html_container">
            <t t-if="docs">
                <t t-foreach="docs.sale_order_id" t-as="o">
                    <t t-call="nai_crm.custom_quotation_report" t-lang="o.partner_id.lang"/>
                </t>
            </t>
            <t t-else="">
                <span>⚠️ Không có dữ liệu</span>
            </t>
        </t>
    </template>

    <record id="action_custom_quotation_report" model="ir.actions.report">
        <field name="name">Custom Quotation Report</field>
        <field name="model">popup.select.fields.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nai_crm.custom_so_retail_report</field>
        <field name="report_file">nai_crm.custom_so_retail_report</field>
        <field name="binding_model_id" ref="nai_crm.model_popup_select_fields_report"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
